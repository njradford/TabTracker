{
  "name": "Tab Tracker",
  "content_scripts": [
    {
    "js": ["popup.js"],
    "matches": ["<all_urls>"]
    }
  ],
  "description": "Track your activity on distracting sites",
  "version": "0.0",
  "permissions": [
    "activeTab",
    "webNavigation",
    "tabs",
    "storage",
    "background",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "options_page": "Options_Page/test.html",

  "browser_action": {
    "default_title": "TabTracker",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,

  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png" }
}
